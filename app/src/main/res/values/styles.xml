<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InfoTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_theme_on_surface</item>
    </style>

    <style name="HighlightTextStyle" parent="InfoTextStyle">
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Card Styles -->
    <style name="CardStyle">
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/card_background</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="InfoCardStyle" parent="CardStyle">
        <item name="android:background">@color/light_blue</item>
    </style>

    <!-- Section Title Style -->
    <style name="SectionTitleStyle">
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Financial Item Style -->
    <style name="FinancialItemStyle">
        <item name="android:textColor">@color/md_theme_on_surface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Amount Text Styles -->
    <style name="PositiveAmountStyle" parent="FinancialItemStyle">
        <item name="android:textColor">@color/success_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NegativeAmountStyle" parent="FinancialItemStyle">
        <item name="android:textColor">@color/expense_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 计算器按钮样式 - 数字按钮 -->
    <style name="CalculatorButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/number_button_color</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <!-- 运算符按钮 -->
    <style name="CalculatorButtonStyle.Operator">
        <item name="backgroundTint">@color/blue_500</item>
    </style>

    <!-- 功能按钮 (AC, DEL) -->
    <style name="CalculatorButtonStyle.Function">
        <item name="backgroundTint">@color/orange_500</item>
    </style>

    <!-- 主要按钮 (OK) -->
    <style name="CalculatorButtonStyle.Primary">
        <item name="backgroundTint">@color/success_color</item>
    </style>
</resources>