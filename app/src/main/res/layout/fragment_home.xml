<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_surface_variant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">



        <!-- 工资信息卡片 -->
        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SectionTitleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💰 工资详情"
                    android:layout_marginTop="0dp"/>

                <!-- 税前工资总计行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/llSalaryHeader">

                    <TextView
                        android:id="@+id/tvSalary"
                        style="@style/FinancialItemStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="税前工资：0元"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/ivSalaryExpand"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more"
                        android:contentDescription="展开工资详情" />
                </LinearLayout>

                <!-- 工资项详情（默认隐藏） -->
                <LinearLayout
                    android:id="@+id/llSalaryDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone" />

                <!-- 社保&公积金合并显示 -->
                <LinearLayout
                    android:id="@+id/llSocialInsuranceAndHousingFund"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llSocialInsuranceHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:id="@+id/tvSocialInsuranceAndHousingFund"
                            style="@style/NegativeAmountStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="社保&amp;公积金：0元"/>

                        <ImageView
                            android:id="@+id/ivSocialInsuranceExpand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_more"
                            android:contentDescription="展开社保公积金详情" />

                    </LinearLayout>

                    <!-- 详细信息，默认隐藏 -->
                    <LinearLayout
                        android:id="@+id/llSocialInsuranceDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvSocialInsurance"
                            style="@style/NegativeAmountStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="社保缴纳：0元"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvHousingFund"
                            style="@style/NegativeAmountStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="公积金：0元"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvTax"
                    style="@style/NegativeAmountStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="个人所得税：0元"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="@color/divider_color"/>

                <TextView
                    android:id="@+id/tvNetIncome"
                    style="@style/PositiveAmountStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="实际收入：0元"
                    android:textSize="18sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 记账信息卡片 -->
        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SectionTitleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💰 生活收支"
                    android:layout_marginTop="0dp"/>

                <TextView
                    android:id="@+id/tvExpenses"
                    style="@style/NegativeAmountStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="本月支出：0元"/>

                <TextView
                    android:id="@+id/tvOtherIncome"
                    style="@style/PositiveAmountStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="其他收入：0元"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="@color/divider_color"/>

                <TextView
                    android:id="@+id/tvNetBalance"
                    style="@style/HighlightTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="月度结余：0元"
                    android:textSize="18sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 操作按钮卡片 -->
        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SectionTitleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚡ 快速操作"
                    android:layout_marginTop="0dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnAddOtherIncome"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="💰 添加收入"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btnAddExpense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="💸 记账支出"
                        android:layout_marginHorizontal="4dp"/>

                    <Button
                        android:id="@+id/btnViewRecords"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📋 查看记录"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>